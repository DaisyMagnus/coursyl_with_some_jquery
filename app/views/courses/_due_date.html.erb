<div id="due-dates" class="modal hide fade">
  <%= form_tag enroll_course_path, method: :post do %>
    <div class="modal-header">
      <h3>Calendar <%= @course.course_code %></h3>
    </div>
    <div class="modal-body">
      <%= hidden_field_tag :id, @course.id %>
      <span class="field-label"><%= label_tag :active_at, "Date Assigned" %></span>
      <span class="add-on"></span>
        <%= text_field_tag :date, nil, type: "date", required: true %>
        <span class="field-label"><%= label_tag :due_at, "Date Due" %></span>
        <%= text_field_tag :date, nil, type: "date", required: true %>
        <div class="input-prepend">
      </div>
    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal">Close</a>
      <%= submit_tag "Add Student", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
